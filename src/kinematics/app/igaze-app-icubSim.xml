<application>

  <name>vvv18-orange-gaze-sim</name>

  <dependencies>
      <port>/yarplogger</port>
      <port>/icubSim/cam/left</port>
      <port>/icubSim/cam/right</port>
      <port>/icubSim/cartesianController/right_arm/state:o</port>
      <port>/iKinGazeCtrl/rpc</port>
  </dependencies>

  <module>
      <name>set_robot_name</name>
      <parameters>--robot icubSim</parameters>
      <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpview</name>
      <parameters>--name /viewerL --x 10 --y 10 --compact</parameters>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpview</name>
      <parameters>--name /viewerR --x 360 --y 10 --compact</parameters>
      <node>localhost</node>
  </module>

  <connection>
      <from>/icubSim/cam/left</from>
      <to>/imgL:i</to>
      <protocol>udp</protocol>
  </connection>

  <connection>
      <from>/icubSim/cam/right</from>
      <to>/imgR:i</to>
      <protocol>udp</protocol>
  </connection>

  <connection>
      <from>/imgL:o</from>
      <to>/viewerL</to>
      <protocol>udp</protocol>
  </connection>

  <connection>
      <from>/imgR:o</from>
      <to>/viewerR</to>
      <protocol>udp</protocol>
  </connection>

</application>
